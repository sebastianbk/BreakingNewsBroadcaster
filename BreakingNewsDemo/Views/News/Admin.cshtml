
@{
    ViewBag.Title = "Admin";
}

<h2>Admin.</h2>
<h3>Broadcast news to all clients</h3>

<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-12">
            <input type="text" id="message" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <input type="button" id="sendmessage" value="Send" class="btn btn-primary form-control" />
        </div>
    </div>
</div>

<hr />

<div class="col-md-12">
    <ul id="news"></ul>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            console.log('wiring up hub connection');
            // Reference the auto-generated proxy for the hub.
            var breakingNews = $.connection.breakingNewsHub;
            // Create a function that the hub can call back to display messages.
            breakingNews.client.addNewMessageToPage = function (message, datetime) {
                console.log(message);
                // Add the message to the page.
                $('ul#news').append('<li><strong>' + htmlEncode(datetime) + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            // Set initial focus to message input box.
            $('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                console.log('connected to hub');
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    breakingNews.server.send($('#message').val());
                    // Clear text box and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
